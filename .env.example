# Application Configuration
# For Human Development (default)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# For AI Development, use:
# NEXT_PUBLIC_APP_URL=http://localhost:3100

# For Production, use:
# NEXT_PUBLIC_APP_URL=https://your-production-domain.com

# Convex Configuration
CONVEX_DEPLOYMENT=
NEXT_PUBLIC_CONVEX_URL=

# OpenRouter API Configuration (Required for LLM)
# Get your API key from: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# LLM Model Selection (Optional - defaults shown)
LLM_MODEL=anthropic/claude-3-haiku
LLM_FALLBACK_MODEL=openai/gpt-4o-mini

# OpenAI API Configuration (Optional - for embeddings)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Cloudflare Vectorize Configuration (Optional - for production vector storage)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
VECTORIZE_DATABASE_ID=your_vectorize_database_id

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# OAuth Configuration
OAUTH_SECRET=your_random_oauth_secret_here

# Port Configuration (from port-management-examples.md)
# Human Development Environment
PORT=3000
STORYBOOK_PORT=6006
CHROME_DEBUG_PORT=9222

# For AI Development, use these instead:
# PORT=3100
# STORYBOOK_PORT=6106
# CHROME_DEBUG_PORT=9322