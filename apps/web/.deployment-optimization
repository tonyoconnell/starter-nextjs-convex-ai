# Deployment Optimization Settings
# This file configures maximum speed optimizations for Cloudflare Pages

# Build optimizations
export NEXT_TELEMETRY_DISABLED=1
export TURBO_TELEMETRY_DISABLED=1
export DISABLE_ESLINT_PLUGIN=1
export SKIP_PREFLIGHT_CHECK=1
export SKIP_TYPE_CHECK=1
export FORCE_COLOR=0
export CI=1

# Memory optimizations  
export NODE_OPTIONS="--max-old-space-size=4096 --max-semi-space-size=128"

# Bun optimizations
export BUN_CONFIG_NO_CLEAR_TERMINAL_ON_RELOAD=1
export BUN_CONFIG_PREFER_OFFLINE_INSTALL=1

# Disable unnecessary features
export NEXT_PRIVATE_SKIP_SIZE_LIMIT_CHECK=1
export NEXT_PRIVATE_SKIP_VALIDATE=1

# Cache settings
export NEXT_CACHE_DISABLED=0
export WEBPACK_CACHE_TYPE=filesystem